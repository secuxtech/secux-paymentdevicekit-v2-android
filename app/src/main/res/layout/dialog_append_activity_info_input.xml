<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@null">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_command_input_dialog"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">




        <EditText
            android:id="@+id/editText_append_coin"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:text="$"
            android:hint="Coin"
            android:ems="10"
            android:gravity="top"
            android:padding="10dp"
            android:background="@drawable/shape_command_input_bg" />

        <EditText
            android:id="@+id/editText_append_token"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:text="ABCD"
            android:hint="Token"
            android:ems="10"
            android:gravity="top"
            android:padding="10dp"
            android:background="@drawable/shape_command_input_bg" />

        <EditText
            android:id="@+id/editText_append_icon_size"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:text="1000"
            android:hint="Icon size"
            android:ems="10"
            android:gravity="top"
            android:padding="10dp"
            android:background="@drawable/shape_command_input_bg" />

        <EditText
            android:id="@+id/editText_append_type"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:text="1"
            android:hint="Type 0 or 1"
            android:ems="10"
            android:gravity="top"
            android:padding="10dp"
            android:background="@drawable/shape_command_input_bg" />

        <EditText
            android:id="@+id/editText_append_number"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:text="1"
            android:hint="Number of the append"
            android:ems="10"
            android:gravity="top"
            android:padding="10dp"
            android:background="@drawable/shape_command_input_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_common_alert_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"

                android:onClick="onInputAppendInfoCancelButtonClick"
                android:background="@null"
                android:textSize="15sp"
                android:textColor="#9C9C9C"
                android:text="cancel" />

            <Button
                android:id="@+id/button_common_alert_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@null"
                android:onClick="onInputAppendInfoOkButtonClick"

                android:textSize="15sp"
                android:textColor="@color/colorPurple"
                android:text="ok" />

        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

